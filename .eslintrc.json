{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    "no-nested-ternary": "warn",
    "no-unneeded-ternary": "warn",
    "no-unused-vars": ["off", { "args": "after-used" }]
  }
}
