{
   "compilerOptions": {
      // START: https://www.totaltypescript.com/tsconfig-cheat-sheet
      /* Base Options: */
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es2022",
      "allowJs": true,
      "resolveJsonModule": true,
      "moduleDetection": "force",
      "isolatedModules": true,

      /* Strictness */
      "strict": true,
      "noUncheckedIndexedAccess": true,

      /* If NOT transpiling with TypeScript: */
      "moduleResolution": "Bundler",
      "module": "ESNext",
      "noEmit": true,

      /* If your code runs in the DOM: */
      "lib": ["es2022", "dom"]

      // END: https://www.totaltypescript.com/tsconfig-cheat-sheet
   }
}
